@model LabbOmFotboll.Models.Fotbollspelare

@{
    ViewData["Title"] = "Edit";
}

<h1>Ändra spelare</h1>

<h4>Fotbollspelare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Namn" class="control-label"></label>
                <input asp-for="Namn" class="form-control" />
                <span asp-validation-for="Namn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Langd" class="control-label"></label>
                <input asp-for="Langd" class="form-control" />
                <span asp-validation-for="Langd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vikt" class="control-label"></label>
                <input asp-for="Vikt" class="form-control" />
                <span asp-validation-for="Vikt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LagId" class="control-label"></label>
                <select asp-for="LagId" class="form-control" asp-items="ViewBag.LagId"></select>
                <span asp-validation-for="LagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
