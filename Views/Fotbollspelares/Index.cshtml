@model IEnumerable<LabbOmFotboll.Models.Fotbollspelare>

@{
    ViewData["Title"] = "Spelare";
}

<h1>Spelare</h1>

<p>
    <a asp-action="Create">Registera ny spelare</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Namn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Langd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vikt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lag)
            </th>
            <th>Redigera</th>
            <th>Dataljer</th>
            <th>Radera</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Langd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vikt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lag.lagNamn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <img src="/mycollection/svg/pen-fill.svg" data-toggle="tooltip" data-placement="top" title="Redigera spelaren" />
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="/mycollection/svg/info-circle-fill.svg" data-toggle="tooltip" data-placement="top" title="Information om spelaren" />
                </a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <img src="/mycollection/svg/trash-fill.svg" data-toggle="tooltip" data-placement="top" title="Radera spelaren" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
